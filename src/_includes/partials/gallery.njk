

{% macro gallery(images) %}
<div class="w-full flex flex-wrap justify-center">
    {% for imageUrl in images %}
        <figure class="w-[30%] min-w-[200px] max-w-full p-2" x-data="{open: false}" x-on:click="open = !open;console.log(open);">
            <div class="h-0 pt-[75%] relative">
                <img 
                    class="max-w-full max-h-full absolute top-0 left-0 h-full w-full object-cover"
                    src="{{imageUrl}}"
                    alt=''
                >
            </div>
            <div class="bg-slate-500 bg-opacity-50 z-50 fixed top-0 left-0 w-full h-full p-8" x-bind:class="open ? 'block' : 'hidden'" >
                <img src="{{imageUrl}}" alt="" class="w-full h-full object-contain">
            </div>
        </figure>
    {% endfor %}
</div>
{% endmacro %}
